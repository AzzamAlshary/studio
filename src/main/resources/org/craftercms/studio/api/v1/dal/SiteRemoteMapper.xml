<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v1.dal.SiteRemoteMapper">
    <resultMap id="SiteRemoteMap" type="org.craftercms.studio.api.v1.dal.SiteRemote">
        <id property="id" column="id"/>
        <result property="siteId" column="site_id"/>
        <result property="remoteName" column="remote_name"/>
        <result property="remoteUrl" column="remote_url"/>
        <result property="authenticationType" column="authentication_type"/>
        <result property="remoteUsername" column="remote_username"/>
        <result property="remotePassword" column="remote_password"/>
        <result property="remoteToken" column="remote_token"/>
        <result property="remotePrivateKey" column="remote_private_key"/>
        <result property="salt" column="salt"/>
    </resultMap>

    <select id="getSiteRemote" resultMap="SiteRemoteMap" parameterType="java.util.Map">
        SELECT * FROM site_remote WHERE site_id = #{siteId} AND remote_name = #{remoteName}
    </select>

    <insert id="insertSiteRemote" parameterType="java.util.Map">
        INSERT INTO site_remote (site_id, remote_name, remote_url, authentication_type, remote_username, remote_password, remote_token, remote_private_key, salt)
        VALUES (#{siteId}, #{remoteName}, #{remoteUrl}, #{authenticationType}, #{remoteUsername}, #{remotePassword}, #{remoteToken}, #{remotePrivateKey}, #{salt})
    </insert>

    <delete id="deleteSiteRemoteForSite" parameterType="java.util.Map">
        DELETE FROM site_remote WHERE site_id = #{siteId}
    </delete>

    <delete id="deleteSiteRemote" parameterType="java.util.Map">
        DELETE FROM site_remote WHERE site_id = #{siteId} AND remote_name = #{remote_name}
    </delete>
</mapper>