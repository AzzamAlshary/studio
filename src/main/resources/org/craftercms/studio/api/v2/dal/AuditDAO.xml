<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v2.dal.AuditDAO">
    <resultMap id="AuditLogMap" type="org.craftercms.studio.api.v2.dal.AuditLog">
        <id property="id" column="id"/>
        <result property="modifiedDate" column="modified_date"/>
        <result property="createdDate" column="creation_date"/>
        <result property="summary" column="summary"/>
        <result property="summaryFormat" column="summary_format"/>
        <result property="contentId" column="content_id"/>
        <result property="siteId" column="site_network"/>
        <result property="type" column="activity_type"/>
        <result property="contentType" column="content_type"/>
        <result property="username" column="post_user_id"/>
        <result property="source" column="source" />
    </resultMap>

    <select id="getAuditLogForSite" parameterType="java.util.Map" resultMap="AuditLogMap">
        select *
        from audit
        where 1 = 1
        <if test="siteId != null and siteId !=  '' ">
        and site_network = #{siteId}
        </if>
        <if test="username != null and username != '' ">
            and post_user_id = #{username}
        </if>
        <if test="actions != null">
            and activity_type in
            <foreach item="action" index="index" collection="actions"
                     open="(" separator="," close=")">
                #{action}
            </foreach>
        </if>
        order by modified_date desc limit #{offset},#{limit}
    </select>

    <select id="getAuditLogForSiteTotal" parameterType="java.util.Map" resultType="int">
        select count(1)
        from audit
        where 1 = 1
        <if test="siteId != null and siteId !=  '' ">
            and site_network = #{siteId}
        </if>
        <if test="username != null and username != '' ">
            and post_user_id = #{username}
        </if>
        <if test="actions != null">
            and activity_type in
            <foreach item="action" index="index" collection="actions"
                     open="(" separator="," close=")">
                #{action}
            </foreach>
        </if>
    </select>

    <select id="getAuditLogEntry" parameterType="java.util.Map" resultMap="AuditLogMap">
        SELECT * FROM audit WHERE id = #{id}
    </select>

    <select id="getAuditLog" parameterType="java.util.Map" resultMap="AuditLogMap">
        SELECT * FROM audit
    </select>

    <insert id="insertAuditLog" parameterType="java.util.Map">
        INSERT INTO audit (organization_id, site_id, operation, operation_timestamp, origin, primary_target_id,
        primary_target_type, primary_target_subtype, primary_target_value, actor_id, actor_details)
        VALUES (#{organizationId}, #{siteId}, #{operation}, CURRENT_TIMESTAMP, #{origin}, #{primaryTargetId},
        #{primaryTargetType}, #{primaryTargetSubtype}, #{primaryTargetValue}, #{actorId}, #{actorDetails});
    </insert>
</mapper>