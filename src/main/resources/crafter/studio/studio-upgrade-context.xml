<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="upgradeManager" class="org.craftercms.studio.impl.v2.upgrade.DefaultUpgradeManagerImpl"
          init-method="init" depends-on="databaseInitializer">
        <property name="configurationFile" value="classpath:crafter/studio/upgrade/pipeline.yaml"/>
        <property name="latestVersion" value="3.1.0.4"/>
        <property name="dataSource" ref="dataSource"/>
        <property name="contentRepository" ref="contentRepository"/>
    </bean>

    <bean id="dbScriptUpgrader" class="org.craftercms.studio.impl.v2.upgrade.upgraders.DbScriptUpgrader"
          scope="prototype"/>

</beans>